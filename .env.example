# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores

# API Configuration
VITE_API_BASE_URL=https://tu-api-url.mockapi.io
VITE_API_PRODUCTS_ENDPOINT=/products

# External APIs
VITE_FAKE_STORE_API=https://fakestoreapi.com
VITE_PEXELS_API_BASE=https://images.pexels.com
VITE_UNSPLASH_API_BASE=https://images.unsplash.com

# App Configuration
VITE_APP_NAME=Tu App Name
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Descripción de tu app
VITE_APP_LOGO_URL=/vite.svg

# Development Configuration
VITE_DEV_MODE=true
VITE_ENABLE_DEBUG=false
VITE_NODE_ENV=development

# Features Flags
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_LOCAL_PRODUCTS=true
VITE_ENABLE_CART_PERSISTENCE=true
VITE_ENABLE_SERVICE_WORKER=true

# Authentication Configuration
VITE_ENABLE_DEMO_ACCOUNTS=true
VITE_SESSION_TIMEOUT=3600000
VITE_ADMIN_EMAIL=admin@tudominio.com
VITE_ADMIN_PASSWORD=tu_password_admin
VITE_USER_EMAIL=usuario@tudominio.com
VITE_USER_PASSWORD=tu_password_usuario

# Image Configuration
VITE_IMAGES_BASE_PATH=/images/products
VITE_DEFAULT_PRODUCT_IMAGE=https://via.placeholder.com/300x300?text=Producto
VITE_PLACEHOLDER_IMAGE_BASE=https://via.placeholder.com

# External CDNs
VITE_BOOTSTRAP_ICONS_CDN=https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css
VITE_GOOGLE_FONTS_API=https://fonts.googleapis.com

# Social Media Links
VITE_TWITTER_URL=https://twitter.com/tu_cuenta
VITE_INSTAGRAM_URL=https://instagram.com/tu_cuenta
VITE_WHATSAPP_NUMBER=tu_numero_whatsapp
VITE_WHATSAPP_URL=https://wa.me/tu_numero

# Company Information
VITE_COMPANY_NAME=Tu Empresa
VITE_COMPANY_SLOGAN=Tu Slogan
VITE_COMPANY_PHONE=+tu_telefono
VITE_COMPANY_EMAIL=info@tuempresa.com

# UI Configuration
VITE_DEFAULT_CURRENCY=€
VITE_ITEMS_PER_PAGE=12
VITE_HEADER_ANIMATION_INTERVAL=3000
VITE_DEFAULT_FONT_FAMILY=Quicksand, sans-serif
VITE_HEADING_FONT_FAMILY=Lato, sans-serif

# Service Worker Configuration
VITE_PUBLIC_URL=/
VITE_SW_FILENAME=service-worker.js

# Image URLs for fallback
VITE_FALLBACK_IMAGE_1=https://tu-cdn.com/imagen1.jpg
VITE_FALLBACK_IMAGE_2=https://tu-cdn.com/imagen2.jpg

# External Services
VITE_IMGUR_URL=https://imgur.com
VITE_GOOGLE_LINK_SHORTENER=https://goo.gl

# Development URLs
VITE_LOCALHOST_URL=http://localhost
VITE_LOCALHOST_PORT=5173